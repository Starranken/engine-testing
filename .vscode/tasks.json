{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clear out bin directory",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "if exist \"${workspaceFolder}\\bin\\${fileBasenameNoExtension}\" rmdir /s /q \"${workspaceFolder}\\bin\\${fileBasenameNoExtension}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Create bin directory",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "mkdir \"${workspaceFolder}\\bin\\${fileBasenameNoExtension}\""
            ],
            "problemMatcher": [],
            "dependsOn": "Clear out bin directory"
        },
        {
            "label": "Build with vcvarsall",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "\"${workspaceFolder}\\build.bat\" \"${workspaceFolder}\" \"${fileBasenameNoExtension}\""
            ],
            "options": {
                "cwd": "${workspaceFolder}\\src"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": "Create bin directory",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run executable",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "\"${workspaceFolder}\\bin\\${fileBasenameNoExtension}\\${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${workspaceFolder}\\bin\\${fileBasenameNoExtension}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "problemMatcher": [],
            "dependsOn": "Build with vcvarsall",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}